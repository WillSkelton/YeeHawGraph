{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"react-app",
		"react-app/jest",
		"plugin:react/recommended",
		"airbnb",
		"plugin:react-hooks/recommended",
		"plugin:markdown/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/prop-types": 0,
		"react/jsx-fragments": [
			"error",
			"element"
		],
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"react/jsx-closing-bracket-location": [
			"error",
			"after-props"
		],
		"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"react/forbid-prop-types": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"no-restricted-syntax": [
			"error",
			"ForIn"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"max-len": [
			"error",
			{
				"code": 150
			}
		],
		"no-plusplus": 0,
		"operator-linebreak": [
			"error",
			"after",
			{
				"overrides": {
					"?": "after",
					":": "after"
				}
			}
		],
		"import/prefer-default-export": 0,
		"object-curly-newline": 0
	}
}